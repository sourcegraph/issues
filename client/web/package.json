{
  "private": true,
  "name": "@sourcegraph/web",
  "version": "1.10.1",
  "description": "The Sourcegraph web app",
  "license": "Apache-2.0",
  "scripts": {
    "test": "jest --testPathIgnorePatterns end-to-end --testPathIgnorePatterns regression integration",
    "mochaTask": "cross-env TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha",
    "test:regression": "yarn mochaTask './src/regression/**/*.test.ts' --exit",
    "test:regression:codeintel": "yarn mochaTask ./src/regression/codeintel.test.ts",
    "test:regression:config-settings": "yarn mochaTask ./src/regression/config-settings.test.ts",
    "test:regression:core": "yarn mochaTask ./src/regression/core.test.ts",
    "test:regression:init": "yarn mochaTask ./src/regression/init.test.ts",
    "test:regression:integrations": "yarn mochaTask ./src/regression/integrations.test.ts",
    "test:regression:onboarding": "yarn mochaTask ./src/regression/onboarding.test.ts",
    "test:regression:search": "yarn mochaTask ./src/regression/search.test.ts",
    "test-e2e-sgdev": "cross-env SOURCEGRAPH_BASE_URL=https://sourcegraph.sgdev.org OVERRIDE_AUTH_SECRET=${SGDEV_OVERRIDE_AUTH_SECRET} yarn mochaTask ./src/end-to-end/end-to-end.test.ts",
    "serve:dev": "ts-node-transpile-only --project ./dev/tsconfig.json ./dev/server/development.server.ts",
    "serve:prod": "ts-node-transpile-only --project ./dev/tsconfig.json ./dev/server/production.server.ts",
    "gulpTask": "cross-env NODE_OPTIONS=\"--max_old_space_size=4096\" gulp",
    "dev": "yarn gulpTask dev",
    "unsafeDev": "yarn gulpTask unsafeDev",
    "build": "yarn gulpTask build",
    "watch": "yarn gulpTask watch",
    "watch-webpack": "yarn gulpTask watchWebpack",
    "webpack": "yarn gulpTask webpack",

    "lint": "yarn run eslint && gulp unusedExports && yarn run stylelint",
    "eslint": "eslint --cache '**/*.[tj]s?(x)'",
    "stylelint": "stylelint 'src/**/*.scss' --quiet",
    "browserslist": "browserslist",
    "analyze-bundle": "NODE_ENV=production ENTERPRISE=1 WEBPACK_ANALYZER=1 yarn build"
  },
  "jest": {
    "testURL": "http://localhost:3080"
  }
}
