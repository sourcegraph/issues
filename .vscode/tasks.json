{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "options": {
    "cwd": "${workspaceFolder}",
  },
  "tasks": [
    {
      "label": "Watch TypeScript",
      "detail": "Watch all TypeScript projects so type errors get reported in the problems panel",
      "type": "process",
      "group": "build",
      "problemMatcher": "$tsc-watch",
      "command": ["node_modules/.bin/tsc"],
      "args": ["--build", ".", "--watch", "--incremental"],
      "options": {
        "cwd": "${workspaceFolder}",
      },
      "runOptions": {
        "runOn": "folderOpen",
      },
    },

    {
      "label": "launch",
      "command": "${workspaceRoot}/dev/launch.sh",
      "isBackground": true,
      "problemMatcher": [],
    },
    {
      "label": "tslint",
      "command": "yarn",
      "args": ["--prefix", "web", "tslint"],
      "problemMatcher": "$tslint5",
    },

    {
      "label": "eslint web",
      "command": "yarn",
      "options": {
        "cwd": "${workspaceFolder}/web",
      },
      "args": ["run", "eslint", "--quiet"],
      "problemMatcher": "$eslint-stylish",
      "presentation": {
        "reveal": "never",
      },
    },
    {
      "label": "eslint shared",
      "command": "yarn",
      "options": {
        "cwd": "${workspaceFolder}/shared",
      },
      "args": ["run", "eslint", "--quiet"],
      "problemMatcher": "$eslint-stylish",
      "presentation": {
        "reveal": "never",
      },
    },
    {
      "label": "eslint browser",
      "command": "yarn",
      "options": {
        "cwd": "${workspaceFolder}/browser",
      },
      "args": ["run", "eslint", "--quiet"],
      "problemMatcher": "$eslint-stylish",
      "presentation": {
        "reveal": "never",
      },
    },

    {
      "label": "stylelint",
      "command": "npm",
      "args": ["--silent", "--prefix", "web", "run", "stylelint", "--", "--formatter", "compact"],
      "problemMatcher": {
        "owner": "stylelint",
        "applyTo": "closedDocuments",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "^(.+): line (\\d+), col (\\d+), (\\w+) - (.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5,
          },
        ],
      },
    },
  ],
}
